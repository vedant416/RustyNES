{
  "name": "website",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "build_wasm": "wasm-pack build --release ../RustyNES_wasm --target web --out-dir ../RustyNES_web_ui/public/pkg/",
    "clean": "rm -rf ./public/pkg/ && mkdir ./public/pkg/",
    "dev": "npm run build_wasm && vite --host",
    "build": "tsc && vite build",
    "preview": "npm run build_wasm && tsc && vite build && vite preview",
    "build_deploy": "npm run build_wasm && tsc && vite build --base=/RustyNES",
    "deploy": "npm run build_deploy && gh-pages -d dist"
  },
  "devDependencies": {
    "gh-pages": "^6.1.1",
    "typescript": "^5.2.2",
    "vite": "^5.1.4"
  }
}
